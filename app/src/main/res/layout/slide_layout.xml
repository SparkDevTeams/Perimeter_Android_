<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >

  <TextView
      android:id="@+id/slide_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="150dp"
      android:layout_marginRight="40dp"
      android:layout_marginLeft="40dp"
      android:text="Perimeter is a location based messaging application that allows users to communicate in realtime."
      android:textSize="20sp"
      android:textColor="@color/colorWhite"
      android:fontFamily="@font/sfuitext_regular"
      android:textAlignment="center"/>

  <android.support.v4.view.ViewPager
      android:id="@+id/slideViewPager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="0dp"
      android:layout_marginTop="0dp"></android.support.v4.view.ViewPager>



  <ImageView
      android:id="@+id/slide_image"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_marginRight="30dp"
      android:layout_marginLeft="30dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      app:srcCompat="@drawable/onboarding1"
      android:scaleType="fitCenter"/>
</RelativeLayout>